<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Ads Manager Demo"
        app:titleTextColor="@android:color/white" />

    <!-- Banner Ad Container -->
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="60dp"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:backgroundTint="@android:color/holo_blue_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banner Ad will appear here"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:visibility="visible"
            tools:visibility="gone" />
    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/banner_container"
        app:layout_constraintBottom_toTopOf="@id/native_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ads Manager Demo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app demonstrates the reusable Ads Manager library with support for multiple ad types:"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Features List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Banner Ads"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Interstitial Ads"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Native Ads"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ App Open Ads"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Interstitial Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_interstitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Interstitial Ad"
                android:textSize="16sp"
                android:paddingVertical="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:cornerRadius="8dp"
                app:backgroundTint="@android:color/holo_blue_dark" />

            <!-- Test Ad Buttons -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Ad Actions:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reload_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reload Banner"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@android:color/darker_gray" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reload_native"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reload Native"
                    app:cornerRadius="4dp"
                    app:backgroundTint="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Status Info -->
            <TextView
                android:id="@+id/tv_ad_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ad Status: Initializing..."
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:background="@android:color/white"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Native Ad Container -->
    <LinearLayout
        android:id="@+id/native_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="120dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@android:color/holo_green_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Native Ad will appear here"
            android:textColor="@android:color/darker_gray"
            android:textStyle="italic"
            android:visibility="visible"
            tools:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>